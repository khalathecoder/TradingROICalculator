@page "/journal"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using Blazored.TextEditor
...
<BlazoredTextEditor @ref="_editor" />



<h3 class="text-center mb-3">SurePath Trading – Journal</h3>

<div class="card p-4 mb-4 shadow-sm">
    <EditForm Model="_newEntry" OnValidSubmit="AddEntryAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <!-- Meta row: session / instrument / setup / mood -->
        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Session</label>
                <InputSelect class="form-select" @bind-Value="_newEntry.Session">
                    @foreach (var s in _sessions)
                    {
                        <option value="@s">@s</option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Instrument</label>
                <InputSelect class="form-select" @bind-Value="_newEntry.InstrumentSymbol">
                    <option value="">(None)</option>
                    @foreach (var inst in _instruments)
                    {
                        <option value="@inst.Symbol">
                            @inst.Symbol – @inst.Description
                        </option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Setup</label>
                <InputSelect class="form-select" @bind-Value="_newEntry.Setup">
                    @foreach (var s in _setups)
                    {
                        <option value="@s">@s</option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label fw-bold">Mood</label>
                <InputSelect class="form-select" @bind-Value="_newEntry.Mood">
                    @foreach (var m in _moods)
                    {
                        <option value="@m">@m</option>
                    }
                </InputSelect>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Notes</label>
            <BlazoredTextEditor @ref="_editor" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Screenshot (optional)</label>
            <InputFile OnChange="HandleScreenshotUpload" accept="image/*" />
            <div class="form-text">Upload a TradingView screenshot for this note.</div>
        </div>

        @if (_screenshotDataUrl is not null)
        {
            <div class="mt-3 mb-3">
                <span class="fw-bold">Screenshot preview:</span>
                <div class="mt-2">
                    <img src="@_screenshotDataUrl"
                         style="max-width: 100%; border: 1px solid #ccc; border-radius: 4px;" />
                </div>
            </div>
        }

        <button type="submit" class="btn btn-primary">Add Note</button>
    </EditForm>
</div>

@if (_entries.Any())
{
    <div class="list-group">
        @foreach (var e in _entries.OrderByDescending(e => e.CreatedUtc))
        {
            <div class="list-group-item mb-3 shadow-sm">
                <div class="d-flex justify-content-between mb-1">
                    <small class="text-muted">
                        @e.CreatedUtc.ToLocalTime().ToString("g")
                        @if (!string.IsNullOrWhiteSpace(e.Session))
                        {
                            @(" · " + e.Session)
                        }
                        @if (!string.IsNullOrWhiteSpace(e.InstrumentSymbol))
                        {
                            @(" · " + e.InstrumentSymbol)
                        }
                        @if (!string.IsNullOrWhiteSpace(e.Setup))
                        {
                            @(" · " + e.Setup)
                        }
                        @if (!string.IsNullOrWhiteSpace(e.Mood))
                        {
                            @(" · Mood: " + e.Mood)
                        }
                    </small>
                </div>

                @if (!string.IsNullOrWhiteSpace(e.NotesHtml))
                {
                    <div class="mb-2">
                        @((MarkupString)e.NotesHtml)
                    </div>
                }

                @if (!string.IsNullOrEmpty(e.ScreenshotDataUrl))
                {
                    <img src="@e.ScreenshotDataUrl"
                         style="max-width: 100%; border: 1px solid #ccc; border-radius: 4px;" />
                }
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No journal entries yet. Add your first note above.</p>
}

@code {
    private JournalInput _newEntry = new();
    private readonly List<JournalEntry> _entries = new();

    private string? _screenshotDataUrl;
    private BlazoredTextEditor _editor = default!;

    // --- "Config" lists (can move to JSON/service later) ---

    private readonly List<string> _sessions = new()
    {
        "Asia",
        "London",
        "New York",
        "Overnight"
    };

    private readonly List<InstrumentConfig> _instruments = new()
    {
        new("MGC", "Micro Gold Futures"),
        new("GC",  "Gold Futures"),
        new("ES",  "E-mini S&P 500"),
        new("MES", "Micro E-mini S&P 500")
    };

    private readonly List<string> _setups = new()
    {
        "Inside bar (1)",
        "Outside bar (3)",
        "Inside day (1D)",
        "Outside day (3D)",
        "2-2 continuation",
        "2-2 reversal",
        "2-1-2 continuation",
        "2-1-2 reversal",
        "3-1-2 continuation",
        "3-1-2 reversal",
        "1-2-2 reversal",
        "Failed 2 reversal",
        "FTFC (full time frame continuity)",
        "Broadening formation breakout",
        "Other (non-Strat)"
    };

    private readonly List<string> _moods = new()
    {
        "Calm",
        "Focused",
        "Confident",
        "Rushed",
        "Tilted",
        "Bored",
        "Greedy",
        "Done for the day"
    };

    // --- Screenshot upload hardening ---

    private static readonly string[] AllowedImageTypes =
    {
        "image/png",
        "image/jpeg",
        "image/webp"
    };

    private const long MaxScreenshotBytes = 4 * 1024 * 1024; // 4 MB

    private async Task HandleScreenshotUpload(InputFileChangeEventArgs e)
    {
        _screenshotDataUrl = null;

        var file = e.File;
        if (file is null)
        {
            return;
        }

        try
        {
            if (file.Size > MaxScreenshotBytes)
            {
                Console.WriteLine($"Rejected upload over size limit: {file.Size} bytes");
                return;
            }

            if (!AllowedImageTypes.Contains(file.ContentType))
            {
                Console.WriteLine($"Rejected upload with content type {file.ContentType}");
                return;
            }

            using var stream = file.OpenReadStream(MaxScreenshotBytes);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var bytes = ms.ToArray();

            _screenshotDataUrl =
                $"data:{file.ContentType};base64,{Convert.ToBase64String(bytes)}";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Screenshot upload failed: {ex}");
            _screenshotDataUrl = null;
        }
    }

    // now async, pulling HTML from the editor
    private async Task AddEntryAsync()
    {
        var html = await _editor.GetHTML();

        if (string.IsNullOrWhiteSpace(html) && _screenshotDataUrl is null)
        {
            // nothing to save
            return;
        }

        _entries.Add(new JournalEntry
        {
            CreatedUtc = DateTime.UtcNow,
            Session = _newEntry.Session,
            InstrumentSymbol = _newEntry.InstrumentSymbol,
            Setup = _newEntry.Setup,
            Mood = _newEntry.Mood,
            NotesHtml = html ?? string.Empty,
            ScreenshotDataUrl = _screenshotDataUrl
        });

        // reset
        _newEntry = new JournalInput();
        _screenshotDataUrl = null;
        await _editor.LoadHTMLContent(string.Empty);

    }

    public class JournalInput
    {
        public string Session { get; set; } = "New York";
        public string InstrumentSymbol { get; set; } = "MGC";
        public string Setup { get; set; } = "Inside bar (1)";
        public string Mood { get; set; } = "Calm";
    }

    public class JournalEntry
    {
        public DateTime CreatedUtc { get; set; }
        public string Session { get; set; } = string.Empty;
        public string InstrumentSymbol { get; set; } = string.Empty;
        public string Setup { get; set; } = string.Empty;
        public string Mood { get; set; } = string.Empty;

        public string NotesHtml { get; set; } = string.Empty;
        public string? ScreenshotDataUrl { get; set; }
    }

    public record InstrumentConfig(string Symbol, string Description);
}
